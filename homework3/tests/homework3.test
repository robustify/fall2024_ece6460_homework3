<?xml version="1.0"?>
<launch>

  <node pkg="rosservice" type="rosservice" name="set_base_log_level" args="call --wait /homework3/set_logger_level 'ros.homework3' 'error'" />

  <include file="$(find homework3)/launch/homework3.launch" >
    <arg name="rviz" value="false" />
  </include>

  <node pkg="rosbag" type="play" name="bag_playback" args="--clock $(find homework3)/tests/homework3.bag" />

  <test launch-prefix="bash -c 'sleep 2; $0 $@'" pkg="homework3" type="test_homework3" test-name="homework3_tests" time-limit="300.0" />

</launch>
